<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:id="@+id/club_view_root"
    android:layout_height="130dp">

    <com.inspiregeniussquad.handstogether.appViews.CircularImageView
        android:id="@+id/club_logo"
        android:src="@drawable/ic_clubs"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/club_name_"
        android:layout_width="match_parent"
        android:layout_below="@+id/club_logo"
        android:text="@string/team_desc"
        android:padding="2dp"
        android:layout_height="match_parent" />

</RelativeLayout>